                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/sanspro"
                        android:gravity="center"
                        android:textColor="@color/whitecolor"
                        android:text="Donation for Farmers"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/color_green"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:id="@+id/enquiry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="11dp"
                            android:src="@drawable/positive_vote"
                            android:backgroundTint="@color/whitecolor"
                            android:background="@drawable/circular_bg"
                            app:tint="@color/bg_screen1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/sanspro"
                            android:gravity="center"
                            android:textColor="@color/whitecolor"
                            android:text="Admin Enquiry"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/color_green"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">


                <LinearLayout
                    android:id="@+id/market"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="11dp"
                        android:backgroundTint="@color/whitecolor"
                        android:background="@drawable/circular_bg"
                        android:src="@drawable/stock_market"
                        app:tint="@color/bg_screen3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/sanspro"
                        android:gravity="center"
                        android:textColor="@color/whitecolor"
                        android:text="Todays Market Rate \n"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/color_green"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">


                <LinearLayout
                    android:id="@+id/btn_transport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="11dp"
                        android:backgroundTint="@color/whitecolor"
                        android:background="@drawable/circular_bg"
                        android:src="@drawable/delivery_truck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/sanspro"
                        android:gravity="center"
                        android:textColor="@color/whitecolor"
                        android:text="Transport \nService\n"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/color_green"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">


                <LinearLayout
                    android:id="@+id/expenses"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="11dp"
                        android:src="@drawable/government_building"
                        android:backgroundTint="@color/whitecolor"
                        android:background="@drawable/circular_bg"
                        app:tint="@color/bg_screen1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/sanspro"
                        android:gravity="center"
                        android:textColor="@color/whitecolor"
                        android:text="Government\nSchemes\n"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


